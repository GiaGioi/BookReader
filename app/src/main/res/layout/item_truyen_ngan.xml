<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="235dp"
    android:orientation="horizontal"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/linerBook_shortstory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:orientation="vertical"
        android:padding="0dp">
        <ImageView
            android:id="@+id/image_fragment_shortstory"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_book" />

        <TextView
            android:id="@+id/tvnamBook_fragment_shortstory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/actor"
            android:singleLine="true"
            android:textSize="17sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorBook"
            android:text="Tuổi trẻ đáng giá bao nhiêu" />
        <TextView
            android:id="@+id/tvAuther_fragment_shortstory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/actor"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:textColor="@color/colorAuther"
            android:text="Rosie Nguyễn" />

    </LinearLayout>
</androidx.cardview.widget.CardView>