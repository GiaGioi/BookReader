<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/cardviewsong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/namesong"
        android:layout_alignBottom="@+id/separator"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground"
        >

        <View
            android:id="@+id/song_progress_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="#b5e6c808"
            />

        <View
            android:id="@+id/song_anti_progress_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
    </LinearLayout>
<ImageView
    android:paddingTop="12dp"
    android:src="@drawable/iconmusic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/namesong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:gravity="start"
        android:paddingLeft="15dp"
        android:paddingStart="20dp"
        android:text="SONG TITLE"
        android:textAlignment="textStart"
        android:textSize="18sp"
        />
<ImageView
    android:id="@+id/btnplaymusic"
    android:paddingTop="15dp"
    android:layout_marginLeft="250dp"
    android:src="@drawable/playsong"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <ImageView
        android:paddingTop="15dp"
        android:layout_marginLeft="280dp"
        android:src="@drawable/stopmusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
<!--    <Button-->
<!--        android:id="@+id/btn_delete"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentRight="true"-->
<!--        android:layout_below="@+id/namesong"-->
<!--        android:layout_gravity="end"-->
<!--        android:text="Delete"-->
<!--        />-->

    <TextView
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/btnplaymusic"
        android:background="@android:color/darker_gray"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        />


</RelativeLayout>
